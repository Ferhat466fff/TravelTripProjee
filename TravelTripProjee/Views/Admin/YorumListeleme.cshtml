@using TravelTripProjee.Models.Sınıflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Yorumlar>
@{
    ViewBag.Title = "YorumListeleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Bloglar</th>
        <th>İşlemler</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullaniciAdi</td>
            <td>@item.Mail</td>
            <td>@item.Yorum</td>
            <td>@item.Blog.Baslik</td>

            <td>
                <a href="/Admin/YorumSil/@item.ID" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                <a href="/Admin/GuncelleYorum/@item.ID" class="btn btn-outline-info"><i class="fa fa-pen"></i></a>
            </td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa =>Url.Action("YorumListeleme",new { sayfa }))

