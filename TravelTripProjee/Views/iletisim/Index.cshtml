@model TravelTripProjee.Models.Sınıflar.iletisim
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="contact">
    <div class="wrap">
        <div class="contact-top">
            <h3>İletişim & Adres Sayfası</h3>
        </div>
        <div class="form">
            <form class="cmxform" id="contactForm" method="post">
                <div>
                    <input type="text" class="textbox" name="AdSoyad" placeholder="Name" required>
                </div>
                <div>
                    <input type="text" class="textbox" name="Mail" placeholder="Email" required>
                </div>
                <div>
                    <input type="text" class="textbox" name="Konu" placeholder="konu" required>
                </div>
                <div class="form-inline" >
                    <textarea style="width:350px;height:100px;" name="Mesaj" placeholder="Mesaj" required></textarea>
                </div>

                <div>
                    <button class="btn btn-danger" type="submit">Gönder</button>
                </div>
            </form>
        </div>
     
        <div class="clear"></div>
        <div class="contact-bottom">
            <div class="contact-left">
                <div class="contact-add">
                    <h3>Adresimiz</h3>
                    <p>Sabancı Mahallesi, Gazi Sokak No:24, İstanbul </p>
                    <p>Telefonumuz:44-555-6666</p>
                    <p>Email:Ferhat@gmail.com</p>
                </div>

            </div>
            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158850.1766715276!2d-121.922369!3d37.768294!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fc47a6db4d733%3A0xade0f3e5164b81b5!2sRashelle%20Way%2C%20San%20Ramon%2C%20CA%2C%20ABD!5e0!3m2!1str!2str!4v1614939306001!5m2!1str!2str" width="580" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>

            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>

